// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  id    String @id @default(cuid())
  name  String @unique
  image String @default("")

  albums Album[]
  tracks Track[]

  @@map(name: "artists")
}

model Album {
  id             String @id @default(cuid())
  album_type     String
  name           String
  release_date   String
  image          String
  total_tracks   Int
  album_duration Int    @default(0)

  tracks   Track[]
  artist   Artist  @relation(fields: [artistId], references: [id])
  artistId String

  @@map(name: "albums")
}

model Track {
  id           String @id @default(cuid())
  title        String
  duration     Int
  track_number Int
  play_count   Int    @default(691385)
  track_url    String @default("")

  artists Artist[]
  album   Album    @relation(fields: [albumId], references: [id])
  albumId String

  @@map(name: "songs")
}
