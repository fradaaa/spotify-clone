// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Artist {
  id    String @id @default(cuid())
  name  String @unique
  image String

  albums Album[]
  tracks Track[]

  @@map(name: "artists")
}

model Album {
  id           String   @id @default(cuid())
  album_type   String
  name         String
  release_date DateTime
  image        String
  total_tracks Int

  tracks  Track[]
  artists Artist[]

  @@map(name: "albums")
}

model Track {
  id           String @id @default(cuid())
  title        String
  duration     Int
  track_number Int
  play_count   Int

  artists Artist[]
  album   Album    @relation(fields: [albumId], references: [id])
  albumId String

  @@map(name: "songs")
}
